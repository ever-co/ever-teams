{
    "extends": "@ever-teams/ts-config/base.json",
    "compilerOptions": {
        "target": "ES2016",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [],
        "strict": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
    },
    "include": [
        "src"
    ]
}
